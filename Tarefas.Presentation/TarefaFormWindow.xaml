<Window x:Class="Tarefas.Presentation.TarefaFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nova Tarefa"
        Height="300"
        Width="400">

    <Grid>
        <StackPanel>
            <!-- Título da Tarefa -->
            <TextBox x:Name="TituloTextBox" Width="300" Margin="10"
                     Text="{Binding TarefaDto.Titulo, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Descrição da Tarefa -->
            <TextBox x:Name="DescricaoTextBox" Width="300" Margin="10"
                     Text="{Binding TarefaDto.Descricao, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Status da Tarefa -->
            <ComboBox Width="300" Margin="10"
                      SelectedItem="{Binding TarefaDto.Status, Mode=TwoWay}">
                <ComboBoxItem Content="Pendente" />
                <ComboBoxItem Content="EmProgresso" />
                <ComboBoxItem Content="Concluída" />
            </ComboBox>

            <!-- Data de Conclusão -->
            <DatePicker Width="300" Margin="10"
                        SelectedDate="{Binding TarefaDto.DataConclusao, Mode=TwoWay}"/>

            <!-- Botões -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Salvar" Width="100" Margin="10" Command="{Binding SalvarCommand}"/>
                <Button Content="Cancelar" Width="100" Margin="10" Command="{Binding CancelarCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
