<Application x:Class="Tarefas.Presentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:Tarefas.Presentation.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Use o caminho correto com o formato pack:// -->
                <ResourceDictionary Source="/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <helpers:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
